#include "main.h"
//função de delay
void tps(){
	for(int i=100000;i>0;i--);
}


//funções de PREDEFINIÇÕES.
void it0(){
	GPIOC->ODR=0X0; // 0000000
}
void it1(){
	GPIOC->ODR=0X1; // 1000000
}
void it2(){
	GPIOC->ODR=0X3; // 1100000
}
void it3(){
	GPIOC->ODR=0X7; // 1110000
}
void it4(){
	GPIOC->ODR=0XF; // 1111000
}
void it5(){
	GPIOC->ODR=0X1F; // 1111100
}
void it6(){
	GPIOC->ODR=0X3F; // 1111110
}
void it7(){
	GPIOC->ODR=0X7F; // 1111111
}
//////////

int main()
{
	int aux,c=0;
   RCC->AHB1ENR=0X87;
   GPIOC->MODER|=0X5555;
   GPIOB->MODER|=0X0;
   GPIOA->MODER|=0X28000400;


  while(1){
	  if((GPIOA->IDR&0X100)==0X100){ // se pino b8 em alta
		  aux=1;}
	  else{
		  aux=0;
	  }
	 

	  if(c==0){ //=0
		  it0();
	  }
	  if(c==1){ //=1
		  it1();
	  }
	  if(c==2){ //=2
		  it2();
	  }
	  if(c==3){ //=3
		  it3();
	  }
	  if(c==4){ //=4
		  it4();
	  }
	  if(c==5){ //=5
		  it5();
	  }
	  if(c==6){ //=6
		  it6();
	  }
	  if(c==7){  //=7
		  it7();
	  }
  }
}
